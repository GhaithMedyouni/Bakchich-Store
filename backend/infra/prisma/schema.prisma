generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  VENDOR
  ADMIN
}

model User {
  id               String           @id @default(uuid())
  email            String           @unique
  password         String
  name             String?
  role             UserRole         @default(USER)
  googleId         String?          @unique
  refreshTokenHash String?

  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  passwordResets   PasswordReset[]
  vendorInfo       VendorInfo?

  // One-to-one relation
  @@map("users")
}

model VendorInfo {
  id          String     @id @default(uuid())
  companyName String
  photo       String?  
  phone       String?
  address     String?
  categories  Category[] 
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user        User       @relation(fields: [userId], references: [id])
  userId      String     @unique

  @@map("vendor_infos")
}

model Category {
  id      String       @id @default(uuid())
  name    String       @unique
  vendors VendorInfo[]

  @@map("categories")
}

model PasswordReset {
  id         String   @id @default(uuid())
  userId     String
  otpHash    String
  expiresAt  DateTime
  attempts   Int      @default(0)
  used       Boolean  @default(false)
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("password_resets")
}
