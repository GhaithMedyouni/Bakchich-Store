    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 40px 20px;
        }
        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background: #ffffff;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }
        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 0;
            position: relative;
            overflow: hidden;
            height: 300px;
        }
        .orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(40px);
            opacity: 0.6;
            animation: float 6s ease-in-out infinite;
        }
        .orb-1 {
            width: 200px;
            height: 200px;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            top: -50px;
            left: -50px;
            animation-delay: 0s;
        }
        .orb-2 {
            width: 150px;
            height: 150px;
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            bottom: -30px;
            right: -30px;
            animation-delay: 2s;
        }
        .orb-3 {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            top: 50%;
            right: 10%;
            animation-delay: 4s;
        }
        @keyframes float {
            0%, 100% { transform: translateY(0) scale(1); }
            50% { transform: translateY(-20px) scale(1.1); }
        }
        .sparkle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: white;
            border-radius: 50%;
            box-shadow: 0 0 10px white;
            animation: sparkle 3s ease-in-out infinite;
        }
        .sparkle-1 { top: 20%; left: 15%; animation-delay: 0s; }
        .sparkle-2 { top: 60%; left: 80%; animation-delay: 1s; }
        .sparkle-3 { top: 40%; left: 30%; animation-delay: 2s; }
        .sparkle-4 { top: 70%; right: 20%; animation-delay: 1.5s; }
        @keyframes sparkle {
            0%, 100% { opacity: 0; transform: scale(0); }
            50% { opacity: 1; transform: scale(1); }
        }
        .header-content {
            position: relative;
            z-index: 10;
            text-align: center;
            padding: 60px 40px;
        }
        .icon-wrapper {
            width: 120px;
            height: 120px;
            margin: 0 auto 20px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid rgba(255, 255, 255, 0.3);
            animation: pulse 2s ease-in-out infinite;
        }
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        .icon {
            font-size: 64px;
        }
        .header-title {
            font-size: 42px;
            font-weight: 800;
            color: #ffffff;
            margin: 0 0 10px 0;
            letter-spacing: -1px;
        }
        .header-subtitle {
            font-size: 18px;
            color: rgba(255, 255, 255, 0.9);
            margin: 0;
            font-weight: 500;
        }
        .content {
            padding: 50px 40px;
        }
        .greeting {
            font-size: 28px;
            font-weight: 700;
            color: #1a1a1a;
            margin: 0 0 20px 0;
            text-align: center;
        }
        .message {
            font-size: 16px;
            color: #666666;
            line-height: 1.8;
            margin: 0 0 20px 0;
            text-align: center;
        }
        .features {
            display: table;
            width: 100%;
            margin: 40px 0;
